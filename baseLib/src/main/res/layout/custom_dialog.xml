<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="35dp"
    android:paddingRight="35dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dialog_confirm_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="请输入密码验证"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF606060"
            android:textSize="11.5sp" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/textSP13"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="15dp"
            android:background="@color/divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_bt"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/short_dialog_button"
                android:gravity="center"
                android:text="取消"
                android:textColor="#1e90ff" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:background="@color/divide_line"
                android:visibility="gone" />

            <Button
                android:id="@+id/confirm_bt"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/short_dialog_button"
                android:gravity="center"
                android:text="知道了"
                android:textColor="#1e90ff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>