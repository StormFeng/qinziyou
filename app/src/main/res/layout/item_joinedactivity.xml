<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_Head"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_test_bg"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            app:riv_border_width="0dip"
            app:riv_border_color="#ffffff"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="false" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="亲子园1+3早教卡"
                android:textColor="@color/text_bg33"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/view2" />

            <TextView
                android:id="@+id/tv_Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2016-06-01"
                android:textSize="13.5sp"
                android:textColor="@color/text_bg90"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大人："
                    android:textSize="11.5sp"
                    android:textColor="@color/text_bg33"/>
                <TextView
                    android:id="@+id/tv_OldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥600×"
                    android:textSize="15sp"
                    android:textColor="@color/text_bg33"/>
                <TextView
                    android:id="@+id/tv_OldCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    android:textColor="@color/blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textSize="15sp"
                    android:textColor="@color/text_bg33"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小孩："
                    android:textSize="11.5sp"
                    android:textColor="@color/text_bg33"/>
                <TextView
                    android:id="@+id/tv_ChildPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥300×"
                    android:textSize="15sp"
                    android:textColor="@color/text_bg33"/>
                <TextView
                    android:id="@+id/tv_ChildCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    android:textColor="@color/blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textSize="15sp"
                    android:textColor="@color/text_bg33"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#33CCCCCC"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textColor="@color/text_bg33"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_AllCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/blue"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人报名，合计："
            android:textColor="@color/text_bg33"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_AllMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥999"
            android:textColor="@color/blue"
            android:textSize="15sp"/>

    </LinearLayout>
</LinearLayout>
