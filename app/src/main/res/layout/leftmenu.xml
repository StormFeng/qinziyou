<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:orientation="horizontal"
    android:background="@drawable/icon_leftmenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_person"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="6">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="9.5dp"
                    android:src="@drawable/icon_huangguan"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_Head"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/icon_logo"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="45dp"
                        app:riv_border_width="3dp"
                        app:riv_border_color="#CCE4FF"
                        app:riv_mutate_background="true"
                        app:riv_tile_mode="clamp"
                        app:riv_oval="false" />

                    <TextView
                        android:id="@+id/tv_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未登录"
                        android:textSize="18sp"
                        android:textColor="@color/text_bg90"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_tab1"/>
            <ImageView
                android:id="@+id/iv_2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_tab2"/>
            <ImageView
                android:id="@+id/iv_3"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_tab4"/>
            <ImageView
                android:id="@+id/iv_4"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_tab3"/>
            <ImageView
                android:id="@+id/iv_5"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_tab5"/>
            <ImageView
                android:id="@+id/iv_6"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_tab6"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
