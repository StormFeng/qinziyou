<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/icon_bg"
    tools:context=".ui.MainActivity">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">
            <CheckBox
                android:id="@+id/cb_time"
                  android:layout_width="70dp"
                  android:layout_height="26.9dp"
                  android:layout_margin="3.8dp"
                  android:background="@drawable/search_checkbox_bg"
                  android:button="@null"
                  android:text="不限时间"
                  android:textSize="13.5sp"
                  android:gravity="center"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                  android:paddingTop="3dp"
                  android:paddingBottom="3dp"
                  android:textColor="@drawable/tag_text_color"/>
            <com.midian.qzy.widget.tagflowlayout.TagFlowLayout
                android:id="@+id/tag_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.midian.qzy.widget.tagflowlayout.TagFlowLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">
            <CheckBox
                android:id="@+id/cb_type"
                android:layout_width="70dp"
                android:layout_height="26.9dp"
                android:layout_margin="3.8dp"
                android:background="@drawable/search_checkbox_bg"
                android:button="@null"
                android:text="不限类型"
                android:textSize="13.5sp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="@drawable/tag_text_color"/>
            <com.midian.qzy.widget.tagflowlayout.TagFlowLayout
                android:id="@+id/tag_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.midian.qzy.widget.tagflowlayout.TagFlowLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">
                <CheckBox
                    android:id="@+id/cb_age"
                    android:layout_width="70dp"
                    android:layout_height="26.9dp"
                    android:layout_margin="3.8dp"
                    android:background="@drawable/search_checkbox_bg"
                    android:button="@null"
                    android:text="不限年龄"
                    android:textSize="13.5sp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@drawable/tag_text_color"/>
                <com.midian.qzy.widget.tagflowlayout.TagFlowLayout
                    android:id="@+id/tag_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.midian.qzy.widget.tagflowlayout.TagFlowLayout>
            </LinearLayout>

            <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <CheckBox
            android:id="@+id/cb_position"
            android:layout_width="70dp"
            android:layout_height="26.9dp"
            android:layout_margin="3.8dp"
            android:background="@drawable/search_checkbox_bg"
            android:button="@null"
            android:text="不限距离"
            android:textSize="13.5sp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@drawable/tag_text_color"/>
        <com.midian.qzy.widget.tagflowlayout.TagFlowLayout
            android:id="@+id/tag_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.midian.qzy.widget.tagflowlayout.TagFlowLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
