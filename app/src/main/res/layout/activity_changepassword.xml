<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_bg"
    tools:context=".ui.MainActivity">
    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_OldPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:textSize="16sp"
       android:paddingLeft="16dp"
        android:textColor="@color/text_bg60"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_NewPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:hint="输入新密码"
            android:textSize="16sp"
           android:paddingLeft="16dp"
            android:textColor="@color/text_bg60"
            android:background="@color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divide_line"/>
        <EditText
            android:id="@+id/et_NewPassAgain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:hint="重新输入新密码"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:textColor="@color/text_bg60"
            android:background="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_Ok"
        android:layout_width="219dp"
        android:layout_height="43dp"
        android:text="修改密码"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/radius_blue_bg"/>

</LinearLayout>
