<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/map_ioc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="5dp"
            android:background="@drawable/icon_map_bg"
            android:text="科学城"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ioc_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="111"
            android:textColor="@color/white"
            android:background="@drawable/map_frame_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/number_tx"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@id/map_ioc_layout"
        android:layout_alignTop="@id/map_ioc_layout"
        android:background="@drawable/map_number_bg"
        android:gravity="center"
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>